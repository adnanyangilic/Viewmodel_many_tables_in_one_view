@model View3model.ViewModels.VeganVM

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Fruit, Vegetable, Legume, Grain</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>


            <div class="form-group">
                <label asp-for="FruitName" class="control-label"></label>
                <input asp-for="FruitName" class="form-control" />
                <span asp-validation-for="FruitName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <label asp-for="VegetableName" class="control-label"></label>
                <input asp-for="VegetableName" class="form-control" />
                <span asp-validation-for="VegetableName" class="text-danger"></span>
            </div>



            <div class="form-group">
                <label asp-for="LegumeName" class="control-label"></label>
                <input asp-for="LegumeName" class="form-control" />
                <span asp-validation-for="LegumeName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="GrainName" class="control-label"></label>
                <input asp-for="GrainName" class="form-control" />
                <span asp-validation-for="GrainName" class="text-danger"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
